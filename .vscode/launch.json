{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug App (Uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.software_factory_poc.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "envFile": "${workspaceFolder}/.env",
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Debug Tests (All)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Current Test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
